  GNU nano 6.2                                                                                        bytalent.ru                                                                                                  server {

        #root /usr/share/nginx/html/dist;
        #index index.html;

        server_name bytalent.ru;

        location /api {
               rewrite ^/api/(.*)$ /$1 break;
               proxy_pass http://localhost:3000;
               proxy_http_version 1.1;
               proxy_set_header Upgrade $http_upgrade;
               proxy_set_header Connection 'upgrade';
               proxy_set_header Host $host;
               proxy_cache_bypass $http_upgrade;
               # try_files $uri $uri/ =404;
        }
        location / {
                root /usr/share/nginx/html/dist;
                #index index.html;
                try_files $uri  /index.html;
        }
        error_log  /var/log/nginx/vue-app-error.log;
        access_log /var/log/nginx/vue-app-access.log;

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/bytalent.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/bytalent.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    listen 80;
    listen [::]:80;

    server_name bytalent.ru;

    return 302 https://$server_name$request_uri;
}
server {
    if ($host = bytalent.ru) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
}